<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/coverGroup"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        >
        <androidx.cardview.widget.CardView
            android:id="@+id/coverR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="150sp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:foreground="@drawable/rounded_image"
            >
            <ImageView
                android:id="@+id/ivAvatarR"
                android:src="@drawable/default_avatar"
                android:scaleType="fitCenter"
                style="@style/AvatarSmallImage"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="150sp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:foreground="@drawable/rounded_image"
            >
            <ImageView
                android:id="@+id/ivAvatar"
                android:src="@drawable/default_avatar"
                android:scaleType="fitCenter"
                style="@style/AvatarSmallImage"/>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_toRightOf="@id/coverGroup"
        android:layout_width="match_parent"
        android:layout_height="86dp"
        >
        <RelativeLayout
            android:layout_centerVertical="true"
            android:paddingRight="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvName"
                android:text="Tên bạn"
                android:layout_toLeftOf="@id/tvTime"
                android:layout_alignParentLeft="true"
                style="@style/TextViewName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvTime"
                android:text="20 giờ"
                android:layout_alignParentRight="true"
                style="@style/TextViewMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvMessage"
                android:text="Nội dung tin nhắn dfjk fjdfj jfjdj jfdjf jfdjdf jfdjf jfd"
                style="@style/TextViewMessage"
                android:layout_below="@id/tvName"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <TextView
            android:layout_alignParentBottom="true"
            android:background="@color/black"
            style="@style/Line"/>
    </RelativeLayout>

</RelativeLayout>