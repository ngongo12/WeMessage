<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WeMessage" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/black1d</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black1d</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Navigation bar color -->
        <item name="android:navigationBarColor">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Customize for splash screen -->
    <style name="SplashscreenTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_splashscreen</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:navigationBarColor">@color/white</item>
    </style>

    <!-- Customize for splash screen -->
    <style name="LoginscreenTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:statusBarColor" tools:targetApi="l">@color/purple_main</item>
        <item name="android:navigationBarColor">@color/purple_main</item>
    </style>

    <!-- Customize for login form -->
    <style name="LoginEditText">
        <item name="android:layout_marginTop">8dp</item>
        <item name="hintEnabled">false</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>
    <style name="TIL">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>
    <style name="btn_login">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>
    <!-- End Customize for login form -->

    <!-- Customize for toolbar -->
    <style name="CustomToolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/black121</item>
        <item name="android:textColor">#ffffff</item>
    </style>
    <!-- End Customize for toolbar -->

    <!-- Customize for navigationview -->
    <style name="CustomBottomNav" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="backgroundTint">@color/black121</item>
        <item name="colorPrimaryVariant">@color/black121</item>
        <item name="colorPrimary">@color/blue119</item>
        <item name="android:textColor">@color/blue119</item>
        <item name="colorOnSurface">@color/greyc0</item>
        <item name="itemIconSize">32dp</item>
    </style>
    <!-- End Customize for navigationview -->

    <!-- Customize for item of friend list -->
    <style name="AvatarImage">
        <item name="android:layout_width">65dp</item>
        <item name="android:layout_height">65dp</item>
    </style>
    <style name="AvatarSmallImage">
        <item name="android:layout_width">38dp</item>
        <item name="android:layout_height">38dp</item>
    </style>
    <style name="TextWithAvatar">
        <item name="android:maxWidth">65dp</item>
    </style>
    <!-- Customize for item of friend list -->
    <!-- Customize for item of friend message list -->

    <style name="TextViewName">
        <item name="android:textSize">20sp</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/greyb3</item>
    </style>
    <style name="TextViewMessage">
        <item name="android:textSize">15sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/grey66</item>
    </style>
    <style name="Line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/greyb3</item>
    </style>
    <!-- Customize for item of friend message list -->

    <!-- Custommize for item of chat box -->
    <style name="TextViewTime">
        <item name="android:paddingLeft">32dp</item>
        <item name="android:paddingRight">32dp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@drawable/bg_radius_black</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="TextViewTextContentReceive">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textSize">17sp</item>
        <item name="android:maxWidth">280dp</item>
        <item name="android:background">@drawable/bg_radius_black</item>
        <item name="android:layout_gravity">left</item>
    </style>
    <style name="TextViewTextContentSend">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textSize">17sp</item>
        <item name="android:maxWidth">280dp</item>
        <item name="android:background">@drawable/bg_radius_blue</item>
        <item name="android:layout_gravity">left</item>
    </style>
    <!-- End Custommize for item of chat box -->

    <!-- Customize for chat input layout -->
    <style name="BackgroundChatIput">
        <item name="android:background">@color/greyc0</item>
    </style>
    <!-- End Customize for chat input layout -->

</resources>